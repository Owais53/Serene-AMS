</div>

@section scripts{


    <script>
        $(function () {
            var successMessage = '@TempData["UpdateMessage3"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblitemspickforpr').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/inventory/GetItemsList',
                    "type": "get",
                    "datatype": "json",
                    
                },
               
                "columns": [
                    {
                        "data":"ItemName",
                        "targets": 0,
                        "render": function (data, type, full) {
                            return "<input type='checkbox' name='statut' value='" + data+"'/>"
                        },
                    },
                    { "data": "ItemType", "authowidth": false },
                    { "data": "ItemName", "authowidth": false },
                    { "data": "StorageLocation", "authowidth": false },
                   
                    {
                        "data": "ItemPrice", "authowidth": false
                    },
                    

                ],               
                "select": {
                    "style": "multi"
                },
                "order":[[1,"asc"]]
            });
            $('#itempr').on('submit', function (e) {
               
            });
            $(document).on('change', 'input:checkbox', function () {
               
            var stats = $('input:checkbox[name="statut"]:checked').map(function () {
                return this.value;
               
            }).get().join(',');
                $("#txtval1").val(stats);
              
           });
        });
      
            
      
        function PostPRItems() {
            var form = $('form[name="form"]');
            var data = $("#txtval1").val();
            $.post("/Inventory/PostPrItems",data, function (res) {
                if (res) {
                    alert("Success");
                }
            });
