            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            View Items
        </li>
    </ol>
</nav>
<div class="ibox">

    <div class="ibox-body">
        @using (Html.BeginForm("CreatePurchaseRequest", "Inventory", FormMethod.Post))
        {


            <table id="tblitemspickforpr" class="table table-striped table-hover responsive table-responsive">
                <thead>
                    <tr style="background-color:#0094ff; color:#ecf0f1">
                        <th></th>
