                        <th>Item Name</th>
                        <th>Storage Location</th>
                        <th>Item Price</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th></th>
                        <th>Item Type</th>
                        <th>Item Name</th>
                        <th>Storage Location</th>
                        <th>Item Price</th>
                    </tr>
                </tfoot>


            </table>

            @Html.EditorFor(model => model.ItemsID, new { htmlAttributes = new { @class = "form-control", @name = "txtval", @id = "txtval1", @type = "hidden" } })
