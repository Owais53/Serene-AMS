@model Serene_AMS.ViewModels.ProcureVM
@{
  
  
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            Purchase Request Items
        </li>
    </ol>
</nav>
<div class="ibox">

    <div class="ibox-body">
        <p>
            <button class="btn btn-success" type="button" onclick="GetPR()">View Purchase Request</button>
            <a class='btn btn-success' id='geturltopr'>View PR</a>

            @Html.ActionLink("Print PR", "PrintPR")
        </p>

        @Html.EditorFor(model => model.DocNo, new { htmlAttributes = new { @class = "form-control", @id = "getdocno1", @type = "hidden" } })
        <table id="tblqtypickforpr1" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">

                    <th>Document No</th>
                    <th>Items</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Document No</th>
                    <th>Items</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Action</th>
                </tr>
            </tfoot>


        </table>

        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <div class="modal" id="Modalqty" tabindex="-1" data-backdrop="false">
                        <div class="modal-dialog ">
                            @Html.Partial("AddQuantityPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <div class="modal" id="Modalprforprint" tabindex="-1" data-backdrop="false">
                        <div class="modal-dialog ">
                            @Html.Partial("PRPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{


    <script>
        $(function () {
            var successMessage = '@TempData["UpdateMessage3"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblqtypickforpr1').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/inventory/GetPRItemsList',
                    "type": "get",
                    "datatype": "json",
                    "data": { DocNo:$("#getdocno1").val() }
                },
                "columns": [

                    { "data": "DocumentNo", "authowidth": false },
                    { "data": "ItemId", "authowidth": false },
                    { "data": "Quantity", "authowidth": false },
                    { "data": "TotalPrice", "authowidth": false },
                    {
                        "data": "Id", "render": function (data, type, full) {
                            return "<button type='button' onclick=UpdateQty('" + data + "') class='btn btn-primary' id='getbtnqty'>Set Quantity</button>"

                        },
                    },
                   

                ]


            });
            $.ajax({
                type: 'GET',
                url: '/Inventory/PRDoc',
                data: { id: $("#getdocno1").val() },
                success: function (res) {
                    if (res) {
                       
                    }

                },
                error: function (error) {
                    console.log(error);
                }
            })

          
        });
        $("#linktopr").click(function () {
            var prdoc = $("#getdocno1").val();
            var url = $(this).attr('href') + '?Docno' + prdoc;
            location.href = url;
            return false;
        });

        function UpdateQty(id) {

            $.get("/Inventory/GetItemforqty", { id: id }, function (res) {

                $("#qtymodal").html(res);
                $("#Modalqty").modal('show');


            })

        }
        function PostQty() {
            var modal = $("#Modalqty");
            var form = $('form[name="formqty"]');

            form.validate();
            if (!form.valid()) {
                return;
            } else {
                var data = form.serialize();
                $.post("/Inventory/UpdateItemQtyforPr", data, function (res) {
                    if (res) {
                        modal.modal('hide');
                        if (res.code === 1) {
                            window.location = 'SelectItemsQuantityforPR'
                        }
                        $("#tblqtypickforpr1").DataTable.ajax.reload();


                     

                    }

                });

            }
        }
        function GetPR() {
            
           
        }
        function GetPRforDoc() {
            var valueofprdoc = $("#getdocno1").val();
            $.get("/Inventory/GetPRfordoc", { id: valueofprdoc }, function (response) {

                $("#prforprintmodal").html(response);
                $("#Modalprforprint").modal('show');
                $.get("/Inventory/GetPRDetailsfordoc", { id: valueofprdoc }, function (res) {
                    $.each(res, function (i, v) {
                        $("#getprrecord").append($('<tr><td><div><strong>' + v.ItemName + '</strong></div></td><td>' + v.Quantity + '</td><td>' + v.ItemPrice + '</td><td>' + v.Total + '</td></tr>'))
                        $("#totalall").append($('<tr class="text-right"> <td class="font-bold font-18">TOTAL:</td> <td class="font-bold font-18">' + v.ItemPrice + '</td></tr>'))
                     });

                })

            })
        }
        </script>

      
    
}