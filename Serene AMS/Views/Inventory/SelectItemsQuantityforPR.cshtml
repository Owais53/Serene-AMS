@model Serene_AMS.ViewModels.ProcureVM
@{
    ViewBag.Title = "SelectItemsQuantityforPR";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            Purchase Request Items
        </li>
    </ol>
</nav>
<div class="ibox">

    <div class="ibox-body">
        <table id="tblqtypickforpr" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">

                    <th>Document No</th>
                    <th>Items</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Document No</th>
                    <th>Items</th>
                </tr>
            </tfoot>


        </table>
        @Html.EditorFor(model => model.DocNo, new { htmlAttributes = new { @class = "form-control",@id="getdocno" } })
    </div>
</div>

@section scripts{


    <script>
        $(function () {
            var successMessage = '@TempData["UpdateMessage3"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblqtypickforpr').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/inventory/GetPRItemsList',
                    "type": "get",
                    "datatype": "json",
                    "data": { DocNo:$("#getdocno").val() }
                },
                "columns": [

                    { "data": "DocumentNo", "authowidth": false },
                    { "data": "ItemId", "authowidth": false }
                   

                ]


            });


        });


        </script>

      
    
}