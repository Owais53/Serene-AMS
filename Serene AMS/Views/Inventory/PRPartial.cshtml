@model Serene_AMS.ViewModels.ProcureVM

<form name="formprforprint">


    <div class="modal-content responsive" id="prforprintmodal">
        <div class="modal-header">
            <h4 class="modal-title">Purchase Request</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>

        </div>

        <div class="modal-body" style="overflow: auto">

            <div class="ibox invoice">
                <div class="invoice-header">
                                <h3>Purchase Request</h3>
                    <div class="row">
                        <div class="col-6">
                            <div class="invoice-logo">
                                <img src="./assets/img/logos/github-logo.png" height="65px" />
                            </div>
                            
                        </div>
                        <div class="col-6 text-right">
                            <div class="clf" style="margin-bottom:30px;">
                                <dl class="row pull-right" style="width:250px;">
                                    <dt class="col-sm-6">Documento No.</dt>
                                    <dd class="col-sm-6">@Html.DisplayFor(x=>x.DocNo)</dd>
                                    <dt class="col-sm-6">Created By</dt>
                                    <dd class="col-sm-6">@Html.DisplayFor(x=>x.Createdby)</dd>
                                    <dt class="col-sm-6">Created On</dt>
                                    <dd class="col-sm-6">@Html.DisplayFor(x=>x.Createdon)</dd>
                                </dl>
                            </div>
                          
                        </div>
                    </div>
                </div>
                <table class="table table-striped no-margin table-invoice">
                    <thead>
                        <tr>
                            <th>Item</th>                           
                            <th>Quantity</th>                          
                            <th>Unit Price</th>                          
                            <th class="text-right">Total</th>
                           
                        </tr>
                    </thead>
                    <tbody id="getprrecord">
                        
                       
                    </tbody>
                </table>
                <table class="table no-border">
                    <thead>
                        <tr>
                            <th></th>
                            <th width="15%"></th>
                        </tr>
                    </thead>
                    <tbody id="totalall">
                       
                       
                    </tbody>
                </table>
                <div class="text-right">
                    <button class="btn btn-info" type="button" onclick="javascript:window.print();"><i class="fa fa-print"></i> Print</button>
                </div>
            </div>


        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="PostQty()">Submit</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
    </div>


</form>




