
@{
    ViewBag.Title = "ViewGRforInvoice";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            Select GR to Create Purchase Invoice
        </li>
    </ol>
</nav>

<div class="ibox">
    <div class="ibox-body">
        <table id="tblgrlistforinvoice" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Document No</th>
                    <th>Document</th>
                    <th>Vendor</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Document No</th>
                    <th>Document</th>
                    <th>Vendor</th>
                    <th>Action</th>
                </tr>
            </tfoot>


        </table>

    </div>
</div>
@section scripts{


    <script type="text/javascript">
        var  dataTablegrinvoice;
        $(function () {

            dataTablegrinvoice = $('#tblgrlistforinvoice').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/inventory/GetGRListforInvoice',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "Docno", "authowidth": false },
                    { "data": "DocumentType", "authowidth": false },
                    { "data": "VendorName", "authowidth": false },                  
                    {
                        "data": "DocumentNo", "render": function (data, full, meta) {
                            return "<a href='@Url.Action("CreateInvoice","Inventory")?id=" + data+"' class='btn btn-primary' id='getlinktoinvoice'>Create Invoice</a>"
                        },
                    }



                ]


            });

        });
    </script>






}