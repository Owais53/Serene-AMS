
@{
    ViewBag.Title = "ReturnDelivery";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            Select GR to make Return Delivery
        </li>
    </ol>
</nav>

<div class="ibox">

    <div class="ibox-body">
      
        <table id="tblgrlistrd" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Document No</th>
                    <th>Document</th>
                    <th>Vendor</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Document No</th>
                    <th>Document</th>
                    <th>Vendor</th>
                    <th>Action</th>
                </tr>
            </tfoot>


        </table>
    </div>
</div>


@section scripts{


    <script type="text/javascript">
        var dataTablegrrd;
        $(function () {

            dataTablegrrd = $('#tblgrlistrd').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/return/GetGrList',
                    "type": "get",
                    "datatype": "json",

                },

                "columns": [

                    { "data": "Docno", "authowidth": false },
                    { "data": "DocumentType", "authowidth": false },
                    { "data": "VendorName", "authowidth": false },                  
                    {
                        "data": "DocumentNo", "render": function (data, type, full) {
                            return "<a href='@Url.Action("CreateReturnDelivery","Return")/" + data+"' class='btn btn-danger' id='getlinktord'>Create Return Delivery</a>"
                        },
                    }

                ]

            });

    });
    </script>
}