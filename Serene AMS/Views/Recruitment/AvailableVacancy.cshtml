@section scripts{


    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage4"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblvac').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/recruitment/GetvacList',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "CompanyName", "authowidth": false },
                    { "data": "CityName", "authowidth": false },
                    { "data": "DepartmentName", "authowidth": false },
                    { "data": "Position", "authowidth": false },
                    { "data": "Availableseats", "authowidth": false },
                    {
                    "data": "Id", "render": function (data, type) {
                        return "<a class='btn btn-primary' id='btnget' type='submit' href='@Url.Action("CreateVacancy","Recruitment")/" + data+"'>Create Vacancy</a>"

                      },
                    }


                ]


            });


        });

    </script>





}