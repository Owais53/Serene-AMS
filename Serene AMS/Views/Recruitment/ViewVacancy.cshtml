
@{
    ViewBag.Title = "View Vacancy";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            View Vacancy
        </li>
    </ol>
</nav>
<div class="ibox">

    <div class="ibox-body">
        <table id="tblviewvac" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                   
                    <th>Department</th>
                    <th>Vacancy Name</th>
                    <th>Job Level</th>
                    <th>Passing Marks</th>
                    <th>Download Test</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                   
                    <th>Department</th>
                    <th>Vacancy Name</th>
                    <th>Job Level</th>
                    <th>Passing Marks</th>
                    <th>Download Test</th>

                </tr>
            </tfoot>


        </table>

    </div>
</div>
@section scripts{


    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblviewvac').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/recruitment/Getcreatedvaclist',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                   
                    { "data": "DepartmentName", "authowidth": false },
                    { "data": "Position", "authowidth": false },
                    { "data": "JobLevel", "authowidth": false },
                    { "data": "MarksCriteria", "authowidth": false },

                    {
                        "data": "Testpaper", "render": function (data) {
                            return '<a href="/TestPaper/' + data + '">Download</a>'
                        },
                    }


                ]


            });


        });

    </script>





}


