@model Serene_AMS.Models.tblApplicant




<form name="marksform">
   
                   
                        <div class="modal-content responsive" id="candidatemodal">
                            <div class="modal-header" style="background-color:#0026ff; color:white;">
                                <h4 class="modal-title">Upload Candidates Marks</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>

                            </div>
                            <div class="modal-body" style="overflow: auto">
                                @Html.HiddenFor(c=>c.ApplicationId)
                                <div class="form-group">
                                    <label class="control-label">Total Marks:</label>
                                    <label class="control-label">100</label>

                                </div>
                                <div class="form-group">
                                    <label class="control-label">Marks Obtained:</label>
                                    @Html.EditorFor(model => model.Marks, new { htmlAttributes = new { @id = "getmarks", @class = "form-control" } })
                                </div>                                
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" onclick="Upload()">Upload</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                          </div>
                    
                  
</form>





