@model Serene_AMS.ViewModels.CandidateEmployeeVM

<form name="formEmpAdd">


    <div class="modal-content responsive" id="confirmmodal">
        <div class="modal-header">
            <h4 class="modal-title">Employee Confirmation</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>

        </div>

        <div class="modal-body" style="overflow: auto">

            <div class="form-group row">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.ApplicationId, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })


                    @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })


                    @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.DepartmentId, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.DateofBirth, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                    @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.PositionId, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })

                    @Html.EditorFor(model => model.JoiningDate, new { htmlAttributes = new {@id="getdatejoin", @class = "form-control", @type = "hidden" } })

                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10">
                    <label class="control-label">Has Employee Confirmed to Join?</label>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="AddEmp()">Yes</button>
            <button type="button" class="btn btn-danger" onclick="RejectAppoint()">No</button>
        </div>
    </div>


</form>




