
@{
    ViewBag.Title = "StockReport";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            Create Goods Receipt
        </li>
    </ol>
</nav>

<div class="ibox">
    <div class="ibox-body">


        <table id="tblstocklist" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Item Name</th>
                    <th>Available Stock</th>
                    <th>Quality Inspection Stock</th>

                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Item Name</th>
                    <th>Available Stock</th>
                    <th>Quality Inspection Stock</th>
                </tr>
            </tfoot>


        </table>

    </div>
</div>

@section scripts{

    <script type="text/javascript">
        var dataTablestock;
        $(function () {

            dataTablestock = $('#tblstocklist').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/Reports/GetStockList',
                    "type": "get",
                    "datatype": "json",

                },

                "columns": [

                    { "data": "ItemName", "authowidth": false },
                    { "data": "Availablestock", "authowidth": false },
                    { "data": "Qualityinspectionstock", "authowidth": false }
                  

                ]

            });

    });
    </script>




}