@model Serene_AMS.ViewModels.PositionVM

@{
    ViewBag.Title = "Position";
}

<div class="page-heading">
    <h1 class="page-title">Create Positions</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Views/Recruitment/Position.cshtml"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Create Positions</li>
    </ol>
</div>
<div class="ibox">

    <div class="ibox-body">

        <div id="getposview">
            @using (Html.BeginForm("Position", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentId, "Department Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.DepartmentId, (SelectList)ViewBag.getdeplist, "Select Department", new { @id = "getId", @class = "form-control select2_demo_2", @onchange = "ddltextchange()" })
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                    </div>
                    <input type="hidden" id="txtname" name="txtname" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.JobLevel, "Job Level", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.JobLevel, (SelectList)ViewBag.getlevellist, "Select Level", new { @id = "getlevel", @class = "form-control select2_demo_2" })
                        @Html.ValidationMessageFor(model => model.JobLevel, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BasicPay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BasicPay, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BasicPay, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IncomeTax, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IncomeTax, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IncomeTax, "", new { @class = "text-danger" })
                    </div>
                </div>

             

                <div class="form-group">
                    @Html.LabelFor(model => model.Experience,"Years Experience", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control",@type="number" } })
                        @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            }
        </div>
        </div>
    </div>
        @section scripts{
            <script>
    $(function () {
    var successMessage = '@TempData["SuccessMessage9"]'
    if (successMessage != '')
    alertify.success(successMessage);
    });
            </script>
            <script>
        $(function () {
            var errorMessage = '@TempData["ErrorMessage9"]'
            if (errorMessage != '')
                alertify.error(errorMessage);
        });
            </script>
            <script type="text/javascript">

                function ddltextchange() {

                    var depname = $("#getId option:selected").text();
                    $("#txtname").val(depname);

                }


            </script>
        }
