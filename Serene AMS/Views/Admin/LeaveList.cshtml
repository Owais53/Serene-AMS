
@{
    ViewBag.Title = "LeaveList";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            View Leaves
        </li>
    </ol>
</nav>
<div class="ibox">

    <div class="ibox-body">
        <table id="tblleaves" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Casual Leave</th>
                    <th>Sick Leave</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Casual Leave</th>
                    <th>Sick Leave</th>
                </tr>
            </tfoot>


        </table>

    </div>
</div>
@section scripts{
    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblleaves').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/admin/GetLeaveList',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "CasualLeave", "authowidth": false },
                    { "data": "SickLeave", "authowidth": false }
                  

                ]


            });


        });
</script>




}

