
@{
    ViewBag.Title = "UserList";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
             View Users
        </li>
    </ol>
</nav>

<div class="ibox">

    <div class="ibox-body">

        <table id="tbluserlist" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>User</th>
                    <th>Role</th>
                    <th>Is Admin</th>
                    <th>Department</th>                    
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                    <th>Is Admin</th>
                    <th>Department</th>
                </tr>
            </tfoot>


        </table>
    </div>
</div>
@section scripts{
    
    
<script type="text/javascript">
    var dataTableusers;
    $(function () {

        dataTableusers = $('#tbluserlist').DataTable({
            pageLength: 10,
            "ajax": {
                "url": '/Admin/GetUsersList',
                "type": "get",
                "datatype": "json"
            },
            "columns": [

                { "data": "UserName", "authowidth": false },
                { "data": "RoleName", "authowidth": false },
                { "data": "IsAdmin", "authowidth": false },
                { "data": "DepartmentName", "authowidth": false }


            ]


        });


    });
    </script>

}