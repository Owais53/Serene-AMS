
@{
    ViewBag.Title = "ViewPosition";
}

<div class="page-heading">
    <h1 class="page-title">View Position</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Views/Recruitment/ViewPosition.cshtml"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">View Position</li>
    </ol>
</div>
<div class="ibox">

    <div class="ibox-body">


        <table id="tblpos" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Department Name</th>
                    <th>Job Level</th>
                    <th>Position</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Department Name</th>
                    <th>Job Level</th>
                    <th>Position</th>
                </tr>
            </tfoot>


        </table>

    </div>
</div>
@section scripts{



    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage4"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblpos').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/admin/GetPosList',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "DepartmentName", "authowidth": false },
                    { "data": "JobLevel", "authowidth": false },
                    { "data": "Position", "authowidth": false },
                    {
                    "data": "Id", "render": function (data, type) {
                        return "<a class='btn btn-primary' id='btnsub' type='submit' href='@Url.Action("PostStatus","Recruitment")?id=" + data+"'>Submit</a>"

                      },
                    }
                    

                ]


            });


        });

     </script>


}