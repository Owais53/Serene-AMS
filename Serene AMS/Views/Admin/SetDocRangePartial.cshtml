@model Serene_AMS.ViewModels.ProcureVM

<form name="formsetdoctype">


    <div class="modal-content responsive" id="doctypemodal">
        <div class="modal-header">
            <h4 class="modal-title">Set Document Number Range</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>

        </div>

        <div class="modal-body" style="overflow: auto">

            @Html.EditorFor(model => model.TypeId, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })


            <div class="form-group">
                @Html.LabelFor(model => model.DocType, "Document Type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DocType, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.DocType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Docnumberfrom, "Number From", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Docnumberfrom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Docnumberfrom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DocnumberTo, "Number To", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DocnumberTo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DocnumberTo, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-primary" onclick="PostRange()">Submit</button>
                </div>
            </div>
        </div>


    </div>

</form>




