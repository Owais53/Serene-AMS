
@{
    ViewBag.Title = "ViewItems";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            View Items
        </li>
    </ol>
</nav>

<div class="ibox">

    <div class="ibox-body">


        <table id="tblitem" class="table table-striped table-hover responsive table-responsive">
            <thead>
                <tr style="background-color:#0094ff; color:#ecf0f1">
                    <th>Item Type</th>
                    <th>Item Name</th>
                    <th>Storage Location</th>
                    <th>Item Price</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Item Type</th>
                    <th>Item Name</th>
                    <th>Storage Location</th>
                    <th>Item Price</th>
                    <th>Action</th>
                </tr>
            </tfoot>


        </table>

    </div>
</div>

@section scripts{

    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage1"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>

    <script type="text/javascript">
        var Popup, dataTable2;
        $(function () {

            dataTable2 = $('#tblitem').DataTable({
                pageLength: 10,
                "ajax": {
                    "url": '/admin/GetitemList',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "ItemType", "authowidth": false },
                    { "data": "ItemName", "authowidth": false },
                    { "data": "StorageLocation", "authowidth": false },
                    { "data": "ItemPrice", "authowidth": false },
                    {
                    "data": "ItemId", "render": function (data, type) {
                        return "<a class='btn btn-primary' id='btnsub' type='submit' href='@Url.Action("CreateVacancy","Recruitment")?id=" + data+"'>Edit</a>"

                      },
                    }


                ]


            });


        });

    </script>



}
